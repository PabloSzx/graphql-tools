{
  "name": "graphql-tools-monorepo",
  "version": "6.2.3",
  "description": "Useful tools to create and manipulate GraphQL schemas.",
  "private": true,
  "scripts": {
    "postinstall": "patch-package && husky install",
    "deploy:website": "pnpm build:api-docs && pnpm -C website deploy",
    "ts:transpile": "bob-esbuild tsc",
    "build": "bob-esbuild tsc && pnpm -r prepack --no-sort",
    "build:api-docs": "node scripts/build-api-docs.js",
    "lint": "eslint --ext .ts .",
    "prettier": "prettier --ignore-path .gitignore --write --list-different \"**/*.{ts,tsx,graphql,yml}\"",
    "prettier:check": "prettier --ignore-path .gitignore --check \"**/*.{ts,tsx,graphql,yml}\"",
    "test": "jest --no-watchman --forceExit",
    "ci:release": "pnpm -r publish --access public --no-git-checks",
    "ci:version": "changeset version && pnpm i --no-frozen-lockfile --lockfile-only --ignore-scripts",
    "release:canary": "pnpm build && (node scripts/canary-release.js && pnpm build && pnpm changeset publish --tag alpha) || echo Skipping Canary..."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ardatan/graphql-tools.git"
  },
  "keywords": [
    "GraphQL",
    "Apollo",
    "JavaScript",
    "TypeScript",
    "Mock",
    "Schema",
    "Schema Language",
    "Tools"
  ],
  "bugs": {
    "url": "https://github.com/ardatan/graphql-tools/issues"
  },
  "homepage": "https://github.com/ardatan/graphql-tools#readme",
  "peerDependencies": {
    "graphql": "^14.0.0 || ^15.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.14.3",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/preset-env": "7.14.4",
    "@babel/preset-typescript": "7.13.0",
    "@changesets/cli": "2.16.0",
    "@types/jest": "26.0.23",
    "@types/node": "14.17.2",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "babel-jest": "27.0.2",
    "bob-esbuild": "^0.1.25",
    "bob-esbuild-cli": "^0.1.25",
    "concurrently": "6.2.0",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "globby": "^11.0.3",
    "graphql": "15.5.0",
    "graphql-helix": "1.6.1",
    "graphql-subscriptions": "1.2.1",
    "husky": "6.0.0",
    "jest": "27.0.4",
    "lint-staged": "11.0.0",
    "mock-http": "^1.1.0",
    "nock": "13.1.0",
    "patch-package": "6.4.7",
    "prettier": "2.3.1",
    "ts-jest": "27.0.3",
    "typedoc": "0.20.36",
    "typedoc-plugin-markdown": "3.9.0",
    "typescript": "4.3.2",
    "yaml": "^1.10.2"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,graphql,yml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "graphql": "15.5.0",
      "@changesets/apply-release-plan": "5.0.0"
    }
  },
  "engines": {
    "pnpm": ">=6.7.1"
  },
  "dependencies": {
    "@ardatan/aggregate-error": "^0.0.6",
    "@changesets/apply-release-plan": "^5.0.0"
  }
}
